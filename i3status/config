# i3status config file for Calmira GNU/Linux(-libre)

# mkdir -p ~/.config/i3status
# cp /etc/i3status.conf ~/.config/i3status/config

general {
        colors = true
        interval = 20
        output_format = "i3bar"
}

# order += "ipv6"
order += "volume master"
# order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "tztime local"

volume master {
    format = "    %volume" 
    format_muted = "    %volume "
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}


wireless _first_ {
        format_up = "   %essid (%quality) "
        format_down = "   down "
}

ethernet _first_ {
        format_up = "   %speed "
        format_down = "   down "
}

battery all {
        format = "%status %percentage %remaining"
        last_full_capacity = true
    	format_down = " no battery "
    	status_chr = "   " 
    	status_bat = "  " 
    	status_unk = " ? UNK" 
    	status_full = "  "   
    	path = "/sys/class/power_supply/BAT%d/uevent"
}

tztime local {
        format = " %H:%M   " 
        # format = "%Y/%m/%d  %H:%M  " 
}
